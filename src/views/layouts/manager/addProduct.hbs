{{#section "title"}}
<title>
  Thêm nhu yếu phẩm
</title>
{{/section}}
<form id="form-add-product" class="card" onsubmit="event.preventDefault(); handleAddProduct();">
  <div class="card-header">
    <div class="card-title">
      <h2>
        Thêm nhu yếu phẩm
      </h2>
    </div>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-12 col-sm-6 form-group">
        <label class="control-label" for="registerName">
          Tên nhu yếu phẩm
          <span class="text-danger">
            *
          </span>
        </label>
        <input class="form-control" name="name" id="registerName" type="text" required />
      </div>
      <div class="col-12 col-sm-6 form-group">
        <label class="control-label" for="registerPrice">
          Đơn giá (đ)
          <span class="text-danger">
            *
          </span>
        </label>
        <input min="1000" class="form-control" name="price" id="registerPrice" type="number" required />
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-12 col-sm-6 form-group">
        <label class="control-label" for="registerUnit">
          Đơn vị
          <span class="text-danger">
            *
          </span>
        </label>
        <input class="form-control" name="unit" id="registerUnit" type="text" required />
      </div>
      <div class="col-12 col-sm-6 form-group">
        <label class="control-label" for="registerCategory">
          Danh mục
          <span class="text-danger">
            *
          </span>
        </label>
        <select class="form-select" name="category" id="registerCategory" required>
          <option value="" selected disabled hidden>
            Chọn danh mục
          </option>
          {{#each categories}}
          <option value="{{this._id}}">
            {{this.name}}
          </option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <div class="form-group">
        <label class="control-label" for="registerDescription">Mô tả</label>
        <textarea class="form-control" id="registerDescription" rows="3"></textarea>
      </div>
    </div>
    <div class="row mb-3">
      <div class="form-group">
        <label class="control-label" for="registerImages">
          Hình ảnh (có thể chọn nhiều hình)
          <span class="text-danger">
            *
          </span>
        </label>
        <input class="form-control" name="images" id="registerImages" accept="image/*" id="images" type="file" multiple
          required />
      </div>
    </div>
  </div>
  <div class="card-footer mx-auto">
    <button type="button" class="btn btn-secondary mx-2" onclick="goBack()">
      Quay về
    </button>
    <button type="submit" class="btn btn-primary mx-2">
      Thêm mới
    </button>
  </div>
</form>

{{#section "script"}}
<script type="text/javascript" src="/js/handler/manager/product.js"></script>
<script>
  function goBack() {
    window.history.back();
  }
</script>
{{/section}}